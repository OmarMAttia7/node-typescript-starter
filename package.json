{
  "name": "ts-esbuild-starter",
  "version": "1.0.0",
  "description": "A starter project for typescript projects with esbuild.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "prettier src --write && eslint src --fix",
    "ts-check": "tsc",
    "build": "tsc --noEmit --incremental && node scripts/build",
    "pretest": "$npm_execpath run build",
    "test": "jasmine",
    "start": "node dist/index",
    "dev": "nodemon --watch './src/**/*.ts' --exec 'ts-node --esm' ./src/index.ts"
  },
  "author": "Omar M. Attia",
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "^4.3.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "esbuild": "^0.15.13",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jasmine": "^4.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
